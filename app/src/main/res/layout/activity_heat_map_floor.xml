<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_heat_map_floor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shemeshapps.dragonhackswifi.HeatMapFloor">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/finish_button"
        android:textStyle="bold"
        android:text="Finish"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Point"
        android:enabled="false"
        android:layout_above="@+id/finish_button"
        android:id="@+id/scan_now"/>
    <com.shemeshapps.dragonhackswifi.DrawImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scan_now"
        android:id="@+id/floorplan_image"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floorplan_image"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:text="Tap your location and click scan"
        android:textSize="18sp"/>

</RelativeLayout>
